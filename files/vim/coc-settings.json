{
    "outline.keepWindow": true,
    "outline.sortBy": "position",
    "outline.splitCommand": "topleft 30vs",

    "diagnostic.enable": true,
    "diagnostic.displayByAle": false,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.messageDelay": 1000,
    "diagnostic.format": "[%severity] %message",

    "coc.preferences.currentFunctionSymbolAutoUpdate": true,

    "tsserver.enable": true,
    "tsserver.maxTsServerMemory": 1000,

    "html.format.preserveNewLines": false,
    "html.format.wrapLineLength": 500,

    "typescript.suggest.enabled": true,
    "typescript.suggest.autoImports": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
    "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
    "typescript.suggest.completeFunctionCalls": true,
    "javascript.suggest.autoImports": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
    "javascript.suggest.completeFunctionCalls": true,

    "eslint.workingDirectories": [
        "./",
        "./src",
        "./test"
    ],

    "sumneko-lua.enableNvimLuaDev": true,

    "suggest.noselect": true,
    "suggest.snippetIndicator": " ↦ ",
    "suggest.autoTrigger": "always",
    "suggest.localityBonus": true,
    "suggest.triggerAfterInsertEnter": true,

    "languageserver": {
        "nim": {
            "command": "nimlsp",
            "filetypes": ["nim"]
        },
        "vue": {
            "command": "vls",
            "filetypes": ["vue"]
        },
        "angular": {
            "command": "ngserver",
            "args": ["--stdio", "--tsProbeLocations", "/usr/local/lib/node_modules/typescript/lib", "--ngProbeLocations", "/usr/local/lib/node_modules/@angular/language-server/lib"],
            "filetypes": [ "ts", "typescript", "html", "typescriptreact", "typescript.tsx" ],
            "trace.server.verbosity": "verbose"
        },
    },
    "snippets.ultisnips.pythonPrompt": false
}
