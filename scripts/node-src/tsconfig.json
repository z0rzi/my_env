{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "../",
    "typeRoots": [
      "node_modules/@types",
      "node-src/*.d.ts"
    ]
  },
  "include": [
    "./*.js",
    "./*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
