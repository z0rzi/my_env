{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "alwaysStrict": true,
    "outDir": "../",
    "typeRoots": [
      "node_modules/@types",
      "node-src/*.d.ts"
    ],
    "types": ["node"]
  },
  "include": [
    "./*.js",
    "./*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
