{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./",
    "typeRoots": [
      "node_modules/@types",
      "node-src/*.d.ts"
    ]
  },
  "include": [
    "node-src/*.js",
    "node-src/*.ts"
  ],
  "exclude": []
}
